{
  "name": "es6_koa_jest_webpack",
  "version": "1.0.0",
  "description": "A boilerplate project using Koa, Jest and Webpack",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint:js": "eslint . **/*.js --ignore-path .eslintignore --quiet",
    "server:build:prod": "webpack --env.environment production --env.target node --config webpack.config.js --progress --colors",
    "prod:build": "npm run server:build:prod",
    "precommit": "npm run prod:build; npm run test; npm run lint:js",
    "prepush": "npm run prod:build; npm run test; npm run lint:js",
    "dev:server:watch": "nodemon -e js -w 'app' -w 'build/server.js' 'build/server.js'",
    "dev:server:build": "webpack --env.environment development --env.target node --config webpack.config.js --progress --colors",
    "dev:server:build-watch": "webpack --env.environment development --env.target node --config webpack.config.js --progress --colors --watch",
    "dev:server:build:watch": "npm run dev:server:build-watch & npm run dev:server:watch"
  },
  "author": "Matthew Robinson",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.1",
    "kcors": "^2.0.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-helmet": "^3.2.0",
    "koa-router": "^7.1.1",
    "opossum": "^1.3.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.22.0",
    "eslint": "^4.10.0",
    "eslint-plugin-jest": "^21.2.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "glob": "^7.1.2",
    "glob-all": "^3.1.0",
    "jest": "^22.0.4",
    "sinon": "^4.1.3",
    "system-bell-webpack-plugin": "^1.0.0",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.4.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  }
}
